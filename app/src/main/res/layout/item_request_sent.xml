<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="RequestListSentBinding">
        <import type="android.view.View"/>
        <variable
                name="friendDetail"
                type="com.event.reminder.data.model.response.FriendDetailsModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                style="@style/AppTheme.TextView.Normal"
                android:text="@{friendDetail.name}"
                android:layout_width="0dp"
                android:id="@+id/tv_name"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_profile"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="@+id/iv_profile"
                app:layout_constraintEnd_toStartOf="@+id/divider" android:layout_marginTop="@dimen/_5sdp"/>
        <TextView
                style="@style/AppTheme.TextView.Small"
                android:layout_width="0dp"
                android:id="@+id/tv_age"
                android:text="@{String.format(@string/age_year,friendDetail.age)"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                app:layout_constraintEnd_toStartOf="@+id/divider"/>
        <TextView
                style="@style/AppTheme.TextView.Small"
                android:text="@{friendDetail.city}"
                android:layout_width="0dp"
                android:id="@+id/tv_city"
                app:layout_constraintStart_toStartOf="@+id/tv_age"
                app:layout_constraintTop_toBottomOf="@+id/tv_age"
                app:layout_constraintEnd_toStartOf="@+id/divider"
        />
        <TextView
                style="@style/AppTheme.TextView.Normal"
                android:text="@{friendDetail.requestStatus}"
                android:id="@+id/tv_status"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintHorizontal_bias="0.7"/>
        <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.8"/>
        <TextView
                style="@style/AppTheme.TextView.Normal"
                android:text="@{friendDetail.date}"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:id="@+id/tv_date" app:layout_constraintStart_toStartOf="@+id/iv_profile"
                app:layout_constraintEnd_toEndOf="@+id/tv_city" android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/iv_profile"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>