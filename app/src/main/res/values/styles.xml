<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RoundedContainer" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/layout_border</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bt_selector_for_bg</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textColor">@drawable/tv_color_selector_for_bt</item>
    </style>

    <style name="AppTheme.TextView.Normal" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontBlack80</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AppTheme.TextView.Link" parent="AppTheme.TextView.Normal">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:paddingStart">@dimen/_3sdp</item>
        <item name="android:paddingEnd">@dimen/_3sdp</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:textColor">@color/darkStaleBlue</item>
    </style>
    <style name="AppTheme.TextView.Smallest" parent="AppTheme.TextView.Normal">
    <item name="android:textSize">@dimen/_9sdp</item>
    </style>
    <style name="AppTheme.TextView.ExtraSmall" parent="AppTheme.TextView.Normal">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    <style name="AppTheme.TextView.Small" parent="AppTheme.TextView.Normal">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>
    <style name="AppTheme.TextView.Large" parent="AppTheme.TextView.Normal">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <style name="AppTheme.TextView.ExtraLarge" parent="AppTheme.TextView.Normal">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/fontBlack20</item>
        <item name="android:textColor">@color/fontBlack80</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/fontBlack20</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/fontBlack80</item>
        <item name="android:textColorHint">@color/fontBlack20</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="colorControlNormal">@color/fontBlack20</item>
        <item name="colorControlActivated">@color/fontBlack80</item>
        <item name="colorControlHighlight">@color/fontBlack80</item>
        <!--<item name="colorControlHighlight">@color/green</item>-->
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkStaleBlue</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/green</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/colorLightGrey20</item>
    </style>
</resources>
