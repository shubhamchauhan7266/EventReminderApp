<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.event.reminder">

    <application
            android:name=".EventReminderApplication"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.login.SignUpActivity">
        </activity>
        <activity
                android:name=".ui.dashboard.HomeActivity"
                android:label="@string/title_activity_home">
        </activity>
        <activity
                android:name=".ui.login.LoginActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <!-- Accepts URIs that begin with "reminder://event.notification” -->
                <data
                        android:host="event.notification"
                        android:scheme="reminder"/>
            </intent-filter>
        </activity>
    </application>

</manifest>